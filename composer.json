{
	"name": "cosmicgiant/coding-standards",
	"description": "CosmicGiant coding standards for WordPress and Laravel projects",
	"type": "phpcodesniffer-standard",
	"license": "MIT",
	"authors": [
		{
			"name": "CosmicGiant",
			"email": "contact@cosmicgiant.com"
		}
	],
	"require": {
		"php": ">=5.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/php-compatibility": "@stable",
		"phpcompatibility/phpcompatibility-wp": "@stable",
		"sirbrillig/phpcs-variable-analysis": "^2.11",
		"sirbrillig/phpcs-import-detection": "^1.3",
		"slevomat/coding-standard": "^8.0",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
